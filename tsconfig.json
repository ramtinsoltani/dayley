{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/services": ["src/app/services"],
      "@app/model/*": ["src/app/models/*.model.ts"],
      "@app/components": ["src/app/components"],
      "@app/config/*": ["src/app/configs/*.json"],
      "@app/directive/*": ["src/app/directives/*.directive.ts"]
    }
  }
}
